<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".informationpage"
    android:background="@drawable/wallpapers">

    <TextView
        android:id="@+id/result"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:text="Add your information"
        android:textColor="@color/black"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="245dp" />

    <EditText
        android:id="@+id/name1"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="left"
        android:hint="add your name"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="200dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="left"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="200dp" />
    <EditText
        android:id="@+id/numpey"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="left"
        android:inputType="phone"
        android:hint="Phone No"
        android:textColor="@color/black"
        android:textSize="15dp"

        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="200dp"
        />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <EditText
            android:id="@+id/numperad"
            android:layout_width="145dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:hint="Adults number"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="200dp" />

        <EditText
            android:id="@+id/numpdays"
            android:layout_width="145dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"

            android:layout_marginRight="10dp"
            android:gravity="left"
            android:hint="Days "
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="200dp" />
    </TableRow>

    <Spinner
        android:id="@+id/roomtype"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:prompt="@string/app_name"
        android:spinnerMode="dropdown" />

    <EditText
        android:id="@+id/id"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="left"
        android:inputType="number"
        android:hint="ID"
        android:textColor="@color/black"
        android:textSize="15dp"

        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="200dp"
        />


   <TableRow
       android:layout_marginLeft="35dp"
       android:layout_marginTop="10dp"
       android:layout_marginRight="15dp"
       >

       <Button
           android:id="@+id/Update"
           android:layout_width="111dp"
           android:layout_height="wrap_content"
           android:layout_marginLeft="15dp"
           android:layout_marginTop="5dp"
           android:layout_marginRight="15dp"
           android:text="Update" />

       <Button
           android:id="@+id/Calculate"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Calculate"
           android:layout_marginTop="5dp"
           android:layout_marginRight="15dp"
           android:layout_marginLeft="15dp"
           tools:layout_editor_absoluteX="0dp"
           tools:layout_editor_absoluteY="0dp"
           />
   </TableRow>
    <TableRow
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        >

        <Button
            android:id="@+id/Delete"
            android:layout_width="111dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:text="Delete"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
           android:id="@+id/Read"

           android:text="Read"
           android:layout_marginTop="5dp"
           android:layout_marginRight="15dp"
           android:layout_marginLeft="15dp"
           tools:layout_editor_absoluteX="0dp"
           tools:layout_editor_absoluteY="0dp"
           />
    </TableRow>
    <TableRow
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        >
        <Button
            android:id="@+id/Clear"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:text="Clear"
            />

        <Button
            android:id="@+id/Close"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:text="Close"
            />
    </TableRow>
</TableLayout>